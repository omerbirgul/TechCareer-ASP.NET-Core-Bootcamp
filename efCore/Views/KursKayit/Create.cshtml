@model KursKayit

<h2>Kurs Kayit Ekleme</h2>
<hr>

<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="from-label">Öğrenci</label>
        <select asp-for="OgrenciId" type="text" asp-items = "ViewBag.Ogrenciler" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="from-label">Kurs</label>
        <select asp-for="OgrenciId" type="text" asp-items = "ViewBag.Kurslar" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-primary">Kaydet</button>
</form>